{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://traveller-vtt.example.com/schemas/adventure.schema.json",
  "title": "Traveller VTT Adventure Package",
  "description": "Schema for .tvadv adventure preparation packages",
  "type": "object",
  "required": ["version", "meta", "content"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version (semver)"
    },
    "meta": {
      "type": "object",
      "required": ["name", "author", "created"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "author": { "type": "string" },
        "created": { "type": "string", "format": "date-time" },
        "modified": { "type": "string", "format": "date-time" },
        "description": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "system": { "type": "string", "description": "Target star system" },
        "sector": { "type": "string", "description": "Sector name" }
      }
    },
    "content": {
      "type": "object",
      "properties": {
        "npcs": {
          "type": "array",
          "items": { "$ref": "#/definitions/npc" }
        },
        "locations": {
          "type": "array",
          "items": { "$ref": "#/definitions/location" }
        },
        "ships": {
          "type": "array",
          "items": { "$ref": "#/definitions/ship" }
        },
        "events": {
          "type": "array",
          "items": { "$ref": "#/definitions/event" }
        },
        "handouts": {
          "type": "array",
          "items": { "$ref": "#/definitions/handout" }
        },
        "mail": {
          "type": "array",
          "items": { "$ref": "#/definitions/mail" }
        }
      }
    }
  },
  "definitions": {
    "npc": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string", "minLength": 1 },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "location": { "type": "string" },
        "stats": { "$ref": "#/definitions/stats" },
        "skills": { "type": "object", "additionalProperties": { "type": "integer" } },
        "notes": { "type": "string" },
        "visibleTo": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Player IDs or 'all'"
        }
      }
    },
    "stats": {
      "type": "object",
      "properties": {
        "str": { "type": "integer", "minimum": 0, "maximum": 15 },
        "dex": { "type": "integer", "minimum": 0, "maximum": 15 },
        "end": { "type": "integer", "minimum": 0, "maximum": 15 },
        "int": { "type": "integer", "minimum": 0, "maximum": 15 },
        "edu": { "type": "integer", "minimum": 0, "maximum": 15 },
        "soc": { "type": "integer", "minimum": 0, "maximum": 15 },
        "psi": { "type": "integer", "minimum": 0, "maximum": 15 }
      }
    },
    "location": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "enum": ["starport", "city", "base", "station", "wilderness", "other"] },
        "description": { "type": "string" },
        "parentId": { "type": "string", "description": "Parent location ID" },
        "coordinates": {
          "type": "object",
          "properties": {
            "hex": { "type": "string" },
            "system": { "type": "string" }
          }
        }
      }
    },
    "ship": {
      "type": "object",
      "required": ["id", "name", "class"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string", "minLength": 1 },
        "class": { "type": "string" },
        "tonnage": { "type": "integer", "minimum": 1 },
        "crew": { "type": "array", "items": { "type": "string" } },
        "cargo": { "type": "array", "items": { "type": "object" } },
        "state": { "type": "object" }
      }
    },
    "event": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string", "enum": ["trigger", "timed", "random", "conditional"] },
        "trigger": { "type": "string" },
        "date": { "type": "string", "pattern": "^\\d{4}-\\d{3}$" },
        "action": { "type": "string" },
        "data": { "type": "object" }
      }
    },
    "handout": {
      "type": "object",
      "required": ["id", "title", "content"],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string", "minLength": 1 },
        "content": { "type": "string" },
        "type": { "type": "string", "enum": ["text", "image", "document"] },
        "visibleTo": { "type": "array", "items": { "type": "string" } }
      }
    },
    "mail": {
      "type": "object",
      "required": ["id", "senderName", "subject", "body"],
      "properties": {
        "id": { "type": "string" },
        "senderName": { "type": "string", "minLength": 1 },
        "senderType": { "type": "string", "enum": ["npc", "system", "player"] },
        "recipientId": { "type": "string" },
        "recipientType": { "type": "string", "enum": ["player", "role", "ship", "all"] },
        "subject": { "type": "string" },
        "body": { "type": "string" },
        "queuedForDate": { "type": "string", "pattern": "^\\d{4}-\\d{3}$" },
        "triggerId": { "type": "string" }
      }
    }
  }
}
